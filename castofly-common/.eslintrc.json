{
  "env": {
    "es2021": true,
    "node": true
  },
  "plugins": ["node", "prettier"],
  "extends": ["eslint:recommended", "plugin:node/recommended", "plugin:prettier/recommended"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "node/no-unsupported-features/es-syntax": "off",
    "node/no-unpublished-import": [
      "error",
      {
        "allowModules": ["ava"]
      }
    ],
    "node/no-missing-import": [
      "error",
      {
        "allowModules": ["ava"]
      }
    ]
  }
}
